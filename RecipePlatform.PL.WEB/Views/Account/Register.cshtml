@page
@model RecipePlatform.PL.WEB.Views.Account.RegisterModel
@{
}
<head>
    <link href="~/css/Forms.css" rel="stylesheet" />
</head>

@{
	ViewData["Title"] = "Register";

}
 
<div class="container">
    <div class="logo-section">
        <img src="logo.png" alt="Taste Bud Logo" class="logo" />
        <h1 class="brand-name">Taste Bud</h1>
    </div>
    <div class="form-section">
        <h2>Create New Account</h2>
        <form method="post">
            @* Username  *@
            <input asp-for="Model.Username" type="text" placeholder="Username" required />
			<span asp-validation-for="Model.Username" class="text-danger"></span>

            @* Email *@
			<input asp-for="Model.Email" type="email" placeholder="Email" required />
			<span asp-validation-for="Model.Email" class="text-danger"></span>
			@* Password *@
			<input asp-for="Model.Password" type="password" placeholder="Password" required />
			<span asp-validation-for="Model.Password" class="text-danger"></span>

            @* Confirm Password *@
			<input asp-for="Model.ConfirmPassword" type="password" placeholder="Confirm Password" required />
			<span asp-validation-for="Model.ConfirmPassword" class="text-danger"></span>

            <button type="submit">Register</button>
        </form>
        <p class="signin-text">
            Already have account? <a href="#">SignIn</a>
        </p>
    </div>
</div>
