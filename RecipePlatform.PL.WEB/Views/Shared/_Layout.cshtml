<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecipePlatform.PL.WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecipePlatform.PL.WEB.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="flex justify-between items-center p-4 bg-white shadow-md fade-in">
            <div class="flex items-center gap-2">
                <img src="your-logo.png" alt="Logo" class="h-14 animate-fade-in" />
                <div class="font-bold text-xl leading-tight">
                    <div>Taste</div>
                    <div>Bud</div>
                </div>
            </div>
            <div class="flex gap-10 text-lg">
                <a href="#" class="border-b-2 border-green-900 pb-1">Home</a>
                <a href="#" class="hover:border-b-2 pb-1">Recipes</a>
            </div>
            <div class="flex gap-4">
                <button class="bg-black text-white px-6 py-2 rounded hover:opacity-90 transition duration-300">Register</button>
                <button class="border border-green-900 px-6 py-2 rounded hover:bg-green-100 transition duration-300">Login</button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RecipePlatform.PL.WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
